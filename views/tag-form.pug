.form-group
  label(for='title') Tag title
  input#title.form-control(type='text' name='title' placeholder='title')
.form-group
  label Tag image 
  input(type='text' name='image' value='' style='display:none;')
  .image-wrapper(style='margin: 1rem 0;')
    img#display-image(style="max-width:100% !important;max-height:100%  !important; width:auto !important; height: auto !important;")
  button.btn.btn-primary#open-image-modal(type='button' data-toggle='modal' data-target='#image-modal') Select image
script.
  function callback({selectedImage}){
    if(selectedImage){
      $('#display-image').attr('src', '/images/'+selectedImage.name);
      $('#image').val(selectedImage._id)
    }
  }