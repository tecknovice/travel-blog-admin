extends layout/base
block title
 title=title

block plugins_css
 // iCheck for checkboxes and radio inputs
 link(rel='stylesheet' href='/adminlte/plugins/iCheck/minimal/green.css')
 // DataTables
 link(rel='stylesheet' href='/adminlte/bower_components/datatables.net-bs/css/dataTables.bootstrap.min.css')

block page_css
 link(rel='stylesheet' href='/stylesheets/image-list.css')

block content
 section.content-header
  h1=title
 section.content.container
  .row
   .col-xs-12.col-sm-12
    input#checkbox-header(type="checkbox")
    button.btn.btn-danger(type="button") Delete
  .row
   each image in images
    .col-lg-3.col-sm-6
     .box.box-solid
      .box-body
       .image-wrapper
        img(src=`/images/${image.name}` alt=image.name)
       .image-detail
        div
         span
          strong File name
         span=image.name
        div
         span
          strong File size
         span=image.size
        div
         span
          strong Dimensions
         span=`${image.dimensions[0]}x${image.dimensions[1]}`
         .box-tools.pull-right
          input.checkbox-row(type="checkbox")
   else
    .col-xs-12.col-sm-12
     div No images
  .row
   .col-xs-12.col-sm-12
    nav(aria-label="Page navigation")
     ul.pagination
      li
       a(href="#" aria-label="Previous")
        span(aria-hidden="true") «
      li
       a(href="#") 1
      li
       a(href="#") 2
      li
       a(href="#") 3
      li
       a(href="#") 4
      li
       a(href="#") 5
      li
       a(href="#" aria-label="Next")
        span(aria-hidden="true") »

block script
 // load image script
 script(src='/javascripts/image.js')
 // iCheck
 script(src='/adminlte/plugins/iCheck/icheck.min.js')
 script.
  $(function () {
  $('#checkbox-header, .checkbox-row').iCheck({
  checkboxClass: 'icheckbox_minimal-green'
  })
  $('#checkbox-header').on('ifChecked', function (event) {
  $('.checkbox-row').iCheck('check');
  });
  $('#checkbox-header').on('ifUnchecked', function (event) {
  $('.checkbox-row').iCheck('uncheck');
  });
  })